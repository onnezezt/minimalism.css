.container.forms
  <div class="example">
    <form action="" class="form-horizontal">
      <div class="form-group row">
        <label for="" class="col-4 form-label">Normal Input</label>
        <div class="col-20">
          <input class="form-control" type="text">
        </div>
      </div>
      <div class="form-group row">
        <label for="" class="col-4 form-label">Help Text</label>
        <div class="col-20">
          <input class="form-control" type="text">
          <span class="help-block">A block of help text that breaks onto a new line and may extend beyond one line.
          </span>
        </div>
      </div>
      <div class="form-group row">
        <label for="" class="col-4 form-label">Placeholder</label>
        <div class="col-20">
          <input class="form-control" type="text" placeholder="placeholder">
        </div>
      </div>
      <div class="form-group row">
        <label for="" class="col-4 form-label">Disabled Input</label>
        <div class="col-20">
          <input class="form-control" type="text" disabled="disabled">
        </div>
      </div>
      <div class="form-group row">
        <label for="" class="col-4 form-label">Textarea</label>
        <div class="col-20">
          <textarea class="form-control" name="" id="" rows="3"></textarea>
        </div>
      </div>
    </form>
</div>