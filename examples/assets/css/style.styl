body {
  .header, .footer {
    color: #673ab7
    // height: 50px
    // padding: 3px
    // width: 100%
    // display: block
    text-align: center
    // font-size: 20px
  }

  .header {
    width: 100%
    height: 130px
    background: #fff
    position: sticky
    top: 0
    z-index: 1000
    box-shadow: 0 0 10px #ddd
    padding: 1px
  }

  .footer {
    height: 100px
    width: 100%
  }

  .content {
    margin: 0 auto
    width: 900px
    height: 100%

    .container:target {
      top: 100px
    }

    .container {
      margin-top: 50px
      // margin: 30px 0px
      padding: 10px
      border-radius: 5px
      box-shadow: 0px 0px 10px #c9c9c9

      .row {
        margin: 12px
        overflow: hidden

        .grid_block {
          height: 36px

          &:nth-child(even) {
            background: #d3dce6
          }

          &:nth-child(odd) {
            background: lighten(#d3dce6, 30%)
          }
        }
      }
    }

    .buttons {
      .btn {
        margin-left: 10px
      }
    }
  }
}
