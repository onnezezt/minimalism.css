    text-align: center
    // font-size: 20px
  }

  .footer {
    height: 101px
    width: 100%
  }

  .content {
    margin: 0 auto
    width: 900px
    height: 100%

    .container {
      margin: 10px 0px
      padding: 10px
      border-radius: 5px
      box-shadow: 0px 0px 23px #c9c9c9
    }

    .buttons {
      .btn {
        margin-left: 10px
      }
    }
  }
}

.row {
  margin: 12px
  overflow: hidden

  .grid_block {
    height: 36px

    &:nth-child(even) {
      background: #d3dce6
    }

    &:nth-child(odd) {
      background: lighten(#d3dce6, 30%)
    }
  }
}