body {
  .header, .footer {
    height: 50px
    padding: 3px
    width: 100%
    display: block
    text-align: center
    font-size: 20px
  }

  .content {
    margin: 0 auto
    width: 900px
    height: 100%

    .buttons {
      .btn {
        margin-left: 10px
      }
    }
  }
}

.row {
  margin: 12px
  overflow: hidden

  [class*='col-'], [class*='col-sm-'] {
    border-radius: 4px
    height: 36px

    &:nth-child(even) {
      background: #d3dce6
    }

    &:nth-child(odd) {
      background: lighten(#d3dce6, 30%)
    }
  }
}